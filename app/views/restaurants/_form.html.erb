<% if current_restorer.influencer? %>
    <h2>Vous êtes un influenceur vous ne pouvez pas ajouter de restaurant</h2>
    <% else %>
<div class="panel panel-default">
  <div class="panel-heading">
    Développer la notoriété de votre restaurant
  </div>
  <div class="panel-body">
    <div class="container">
      <%= form_for @restaurant, html: {multipart: true} do |f| %>
          <%= render 'shared/errors' %>
        <div class="row">
          <div class="col-md-12 select">
            <div class="form-group">
              <label>Le type de cuisine</label>
              <%= f.select :restaurant_type, [["Français","Français"],["Asiatique","Asiatique"],["Libanais","Libanais"],["Italien","Italien"],["Japonais","Japonais"],["Chinois","Chinois"],["Russe","Russe"],["Marocain","Marocain"],["Oriental","Oriental"],["Mexicain","Mexicain"],["Thaïlandais","Thaïlandais"],["Portugais","Portugais"],["Indien","Indien"],
                                              ["Turc","Turc"]], id: "restaurant_type", prompt: "A sélectionner...", class:"form-control" %>
            </div>
          </div>
        </div>
          <div class="row">
            <div class="form-group">
              <label>Le nom de votre restaurant</label>
              <%= f.text_field :listing_name, placeholder:"le nom de votre restaurant", class:"form-control" %>
            </div>
          </div>
          <div class="row">
            <div class="form-group">
              <label>Description de vos attentes sur instagram</label>
              <%= f.text_area :summary, placeholder:"Expliquer aux influenceurs vos attentes", class:"form-control" %>
            </div>
          </div>
          <div class="row">
            <div class="form-group">
              <label>L'adresse de votre restaurant</label>
              <%= f.text_field :address, placeholder:"l'adresse de votre restaurant", class:"form-control" %>
            </div>
          </div>
          <div class="row">
            <div class="form-group">
              <label>Le numéro de téléphone</label>
              <%= f.text_field :phone, placeholder:"Le numéro de téléphone", class:"form-control" %>
            </div>
          </div>
          <div class="row">
            <div class="form-group">
              <label>Lien de votre site internet (optionnel)</label>
              <%= f.text_field :linkweb, placeholder:"Lien de votre site internet (optionnel)", class:"form-control" %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-4">
              <div class="form-group">
                <psan class="btn btn-default btn-file">
                  <i class="fa fa-cloud-upload fa-lg"></i> Télécharger vos photos
                  <%= file_field_tag "images[]", type: :file, multiple: true %>
                </psan>
              </div>
            </div>
          </div>

          <div id="photos"><%= render 'photos/list' %></div>

          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label>Prix moyen</label>
                <%= f.text_field :price, placeholder:"Prix moyen : ex 45€", class:"form-control" %>
              <div class="input-group-addon">€</div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label>reduction proposer</label>
                <%= f.text_field :reduction, placeholder:"Réduction proposer : ex 20%", class:"form-control" %>
              <div class="input-group-addon">%</div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="form-group">
              <%= f.check_box :active %> Annonce active
            </div>
          </div>
          <div class="actions">
            <%= f.submit "Je valide mon restaurant", class:"btn btn-primary" %>
          </div>
      <% end %>
    </div>
  </div>
</div>
<% end %>