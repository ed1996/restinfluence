<div class="container">
<% if current_restorer.influencer? %>
    <h2>Vous êtes un influenceur vous ne pouvez pas ajouter de restaurant</h2>
    <% else %>

  <%= form_for @restaurant, html: {multipart: true} do |f| %>
  <div class="row">
    <div class="col-lg-12">

      <div id="add-listing">

        <!-- Section -->
        <div class="add-listing-section">

          <!-- Headline -->
          <div class="add-listing-headline">
            <h3><i class="sl sl-icon-doc"></i> Informations</h3>
          </div>

          <!-- Title -->
          <div class="row with-forms">
            <div class="col-md-6">
              <h5>Le nom de votre restaurant <i class="tip" data-tip-content="Name of your business"></i></h5>
              <%= f.text_field :listing_name, placeholder:"le nom de votre restaurant", class:"form-control" %>
            </div>

            <!-- Status -->
            <div class="col-md-6">
              <h5>Le type de cuisine</h5>
              <%= f.select :restaurant_type, [["Français","Français"],["Asiatique","Asiatique"],["Libanais","Libanais"],["Italien","Italien"],["Japonais","Japonais"],["Chinois","Chinois"],["Russe","Russe"],["Marocain","Marocain"],["Oriental","Oriental"],["Mexicain","Mexicain"],["Thaïlandais","Thaïlandais"],["Portugais","Portugais"],["Indien","Indien"],
                                              ["Turc","Turc"]], id: "restaurant_type", prompt: "A sélectionner...", class:"form-control" %>
            </div>

          </div>
          <!-- Row / End -->

        </div>
        <!-- Section / End -->

        <!-- Section -->
        <div class="add-listing-section margin-top-45">

          <!-- Headline -->
          <div class="add-listing-headline">
            <h3><i class="sl sl-icon-location"></i> Localisation</h3>
          </div>

          <div class="submit-section">

            <!-- Row -->
            <div class="row with-forms">

              <!-- Address -->
              <div class="col-md-12">
                <h5>Adresse</h5>
                <%= f.text_field :address, placeholder:"12 Rue de Rivoli, 75004 Paris", class:"form-control" %>
              </div>

            </div>
            <!-- Row / End -->

          </div>
        </div>
        <!-- Section / End -->


        <!-- Section -->
        <div class="add-listing-section margin-top-45">

          <!-- Headline -->
          <div class="add-listing-headline">
            <h3><i class="sl sl-icon-picture"></i> Galerie</h3>
          </div>

          <!-- Dropzone -->
          <div class="submit-section">
            <span class="btn btn-default btn-file">
                  <i class="fa fa-cloud-upload fa-lg"></i> Télécharger vos photos
              <%= file_field_tag "images[]", type: :file, multiple: true %>
                </span>
            <br><br>
            <div id="photos"><%= render 'photos/list' %></div>
          </div>

        </div>
        <!-- Section / End -->


        <!-- Section -->
        <div class="add-listing-section margin-top-45">

          <!-- Headline -->
          <div class="add-listing-headline">
            <h3><i class="sl sl-icon-docs"></i> Détails</h3>
          </div>

          <!-- Description -->
          <div class="form">
            <h5>Description de vos attentes sur instagram</h5>
            <%= f.text_area :summary, placeholder:"Expliquer aux influenceurs vos attentes", class:"form-control", size: "40*3" %>
          </div>

          <!-- Row -->
          <div class="row with-forms">

            <!-- Phone -->
            <div class="col-md-6">
              <h5>Téléphone</h5>
              <%= f.text_field :phone, placeholder:"Le numéro de téléphone", class:"form-control" %>
            </div>

            <!-- Website -->
            <div class="col-md-6">
              <h5>Site web <span>(optionnel)</span></h5>
              <%= f.text_field :linkweb, placeholder:"Lien de votre site internet (optionnel)", class:"form-control" %>
            </div>


          </div>
          <!-- Row / End -->

          <!-- Row -->
          <div class="row with-forms">

            <!-- Phone -->
            <div class="col-md-6">
              <h5>Prix moyen</h5>
              <%= f.text_field :price, placeholder:"Prix moyen : ex 45€", class:"form-control" %>
              <div class="input-group-addon">€</div>
            </div>

            <!-- Website -->
            <div class="col-md-6">
              <h5>Réduction</h5>
              <%= f.text_field :reduction, placeholder:"Réduction proposer : ex 20%", class:"form-control" %>
              <div class="input-group-addon">%</div>
            </div>

          </div>
          <!-- Row / End -->

          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <%= f.check_box :active %> Annonce active
              </div>
            </div>
          </div>
          <div class="actions">
            <%= f.submit "Je valide mon restaurant", class:"btn btn-primary" %>
          </div>


          <!-- Row
          <div class="row with-forms">-->

            <!-- Phone
            <div class="col-md-4">
              <h5 class="fb-input"><i class="fa fa-facebook-square"></i> Facebook <span>(optional)</span></h5>
              <input type="text" placeholder="https://www.facebook.com/">
            </div>-->

            <!-- Website
            <div class="col-md-4">
              <h5 class="twitter-input"><i class="fa fa-twitter"></i> Twitter <span>(optional)</span></h5>
              <input type="text" placeholder="https://www.twitter.com/">
            </div>-->

            <!-- Email Address
            <div class="col-md-4">
              <h5 class="gplus-input"><i class="fa fa-google-plus"></i> Google Plus <span>(optional)</span></h5>
              <input type="text" placeholder="https://plus.google.com">
            </div>

          </div>-->
          <!-- Row / End -->





</div>
  <% end %>
  <% end %>