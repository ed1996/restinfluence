<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to "Mes annonces", restaurants_path, class: "sidebar-link active" %></li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">Mon/mes restaurant(s)</div>
      <div class="panel-body">
        <% @restaurants.each do |restaurant| %>
        <div class="row">
          <div class="col-md-2">
            <%= image_tag restaurant.photos[0].image.url(:thumb) if restaurant.photos.length > 0 %>
          </div>
          <div class="col-md-4">
            <h4><%= restaurant.listing_name %></h4>
          </div>
          <div class="col-md-3 right">
            <%= link_to "Mettre à jour", edit_restaurant_path(restaurant), class:"btn btn-primary" %>
          </div>
          <div class="col-md-3 right">
            <%= link_to "Supprimer", restaurant_path(restaurant), method: :delete, data: {confirm: "êtes-vous sûr ?"}, class:"btn btn-warning" %>
          </div>
        </div>
            <hr>
            <% end %>
      </div>
    </div>
  </div>
</div>