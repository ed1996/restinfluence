<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">

    <h2>Inscription</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render 'shared/devise_errors' %>

        <div class="form-group">
          <%= f.text_field :fullname, autofocus: true, class: "form-control", placeholder: "Nom complet (prénom + nom)" %>
        </div>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "adresse e-mail" %>
      </div>

      <div class="form-group">
        <br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Créer un mot de passe" %>
      </div>

        <div class="form-group">
          Vous êtes un influenceur ?
          <br />
          <%= f.check_box :influencer %>
        </div>

        <div class="form-group">
          (Si vous êtes un influenceur) URL de votre compte instagram :
          <%= f.text_field :linkinsta, autofocus: true, class: "form-control", placeholder: "Lien de votre compte instagram" %>
        </div>

      <div class="actions">
        <%= f.submit "Inscription", class: "btn btn-primary" %>
      </div>
    <% end %>

  </div>
</div>
